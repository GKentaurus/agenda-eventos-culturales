<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/section_menu.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <!-- Título del menú -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:gravity="center_horizontal"
        android:text="@string/label_txt_menu"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="12dp" />

    <!-- Botones del menú (con fondo y color por selector) -->
    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_profile"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_event_explorer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_event_explorer"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_generic_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_generic_search"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_filter_by_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_filter_by_date"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_event_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_event_register"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_event_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:textAllCaps="false"
        android:text="@string/btn_txt_event_manager"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:textAllCaps="false"
        android:text="@string/btn_txt_web"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_customer_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="@string/btn_txt_customer_service"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_pqr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:text="PQR"
        android:textAllCaps="false"
        android:background="@drawable/menu_item_bg"
        android:textColor="@color/menu_item_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:foreground="?attr/selectableItemBackground" />

</LinearLayout>
